{
  "name": "Flask App Dev",

  // -------------------------------------------------------------
  // BUILD SETTINGS
  // -------------------------------------------------------------
  "build": {
    // Use the repo root as build context
    "context": "..",
    "dockerfile": "../Dockerfile",
    "args": {
      "PYTHON_VERSION": "3.12"
    }
  },

  // -------------------------------------------------------------
  // WORKSPACE MOUNT
  // -------------------------------------------------------------
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",

  // -------------------------------------------------------------
  // SSH FORWARDING (allows git push/pull using your host SSH agent)
  // -------------------------------------------------------------
  "runArgs": [
  "-v", "/root/.ssh/agent.sock:/ssh-agent",
  "-e", "SSH_AUTH_SOCK=/ssh-agent"
  ],
  "mounts": [
    "source=/root/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ],
  "remoteUser": "root",

  // -------------------------------------------------------------
  // USER & NETWORK
  // -------------------------------------------------------------

  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Flask"
    }
  },

  // -------------------------------------------------------------
  // ENVIRONMENT VARIABLES INSIDE CONTAINER
  // -------------------------------------------------------------
  "containerEnv": {
    "FLASK_ENV": "development",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },

  // -------------------------------------------------------------
  // VS CODE SETTINGS AND EXTENSIONS (auto-installed inside container)
  // -------------------------------------------------------------
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.isort",
        "batisteo.vscode-django",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  // -------------------------------------------------------------
  // CONTAINER LIFECYCLE COMMANDS
  // -------------------------------------------------------------
  "postCreateCommand": "python -m pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",
  "postStartCommand": "bash -lc 'if [ -f app.py ]; then flask --app app run --host 0.0.0.0 --port 5000; fi'",

  // -------------------------------------------------------------
  // CLEAN EXIT
  // -------------------------------------------------------------
  "shutdownAction": "stopContainer"
}
